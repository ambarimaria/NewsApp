<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="NewsApp – Real-time headlines powered by NewsAPI" />
    <title>@(ViewData["Title"] != null ? $"{ViewData["Title"]} | NewsApp" : "NewsApp")</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>

<nav class="navbar navbar-expand-lg sticky-top" id="mainNavbar">
    <div class="container-xxl">
        <a class="brand-wrap" asp-controller="News" asp-action="Index">
            <div class="brand-logo"><i class="fas fa-rss"></i></div>
            <span class="brand-name">NEWS<span>APP</span></span>
        </a>
        <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navCollapse" style="color:var(--text-muted)">
            <i class="fas fa-bars"></i>
        </button>
        <div class="collapse navbar-collapse" id="navCollapse">
            <ul class="navbar-nav me-auto ms-4 gap-1">
                <li class="nav-item">
                    <a class="nav-link nav-pill @(ViewData["ActivePage"]?.ToString() == "Headlines" ? "active" : "")" asp-controller="News" asp-action="Index">
                        <i class="fas fa-newspaper me-1"></i>Headlines
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link nav-pill @(ViewData["ActivePage"]?.ToString() == "Search" ? "active" : "")" asp-controller="News" asp-action="Search">
                        <i class="fas fa-magnifying-glass me-1"></i>Search
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link nav-pill @(ViewData["ActivePage"]?.ToString() == "Sources" ? "active" : "")" asp-controller="News" asp-action="Sources">
                        <i class="fas fa-tower-broadcast me-1"></i>Sources
                    </a>
                </li>
            </ul>
            <form asp-controller="News" asp-action="Search" method="get" class="d-flex quick-search-form">
                <div class="input-group">
                    <input class="form-control" type="search" name="q" placeholder="Search articles…"
                           value="@ViewData["CurrentQuery"]" autocomplete="off" />
                    <button class="btn btn-accent px-3" type="submit"><i class="fas fa-search"></i></button>
                </div>
            </form>
        </div>
    </div>
</nav>

<div class="category-ribbon">
    <div class="container-xxl">
        <div class="cat-scroll">
            @foreach (var cat in NewsConstants.Categories)
            {
                <a asp-controller="News" asp-action="Index" asp-route-category="@cat"
                   class="category-chip @(ViewData["ActiveCategory"]?.ToString() == cat ? "active" : "")">
                    <i class="fas @NewsConstants.GetCategoryIcon(cat)"></i>
                    @System.Globalization.CultureInfo.CurrentCulture.TextInfo.ToTitleCase(cat)
                </a>
            }
        </div>
    </div>
</div>

<main class="py-4">
    <div class="container-xxl">
        @RenderBody()
    </div>
</main>

<footer class="site-footer py-5 mt-5">
    <div class="container-xxl">
        <div class="row g-4 mb-4">
            <div class="col-md-4">
                <div class="d-flex align-items-center gap-2 mb-3">
                    <div class="brand-logo" style="width:28px;height:28px;font-size:.7rem"><i class="fas fa-rss"></i></div>
                    <span class="brand-name" style="font-size:1.1rem">NEWS<span>APP</span></span>
                </div>
                <p style="font-size:.82rem;color:var(--text-faint);line-height:1.7">
                    Real-time headlines &amp; search powered by
                    <a href="https://newsapi.org" target="_blank" rel="noopener" class="text-accent text-decoration-none">NewsAPI.org</a>.
                    Data refreshes every 5 minutes.
                </p>
            </div>
            <div class="col-md-3 offset-md-1">
                <p class="section-label">Navigate</p>
                <div class="d-flex flex-column gap-2">
                    <a asp-controller="News" asp-action="Index" class="footer-link">Headlines</a>
                    <a asp-controller="News" asp-action="Search" class="footer-link">Search Articles</a>
                    <a asp-controller="News" asp-action="Sources" class="footer-link">News Sources</a>
                </div>
            </div>
            <div class="col-md-4">
                <p class="section-label">Categories</p>
                <div class="d-flex flex-wrap gap-2">
                    @foreach (var cat in NewsConstants.Categories)
                    {
                        <a asp-controller="News" asp-action="Index" asp-route-category="@cat"
                           style="font-size:.72rem;background:var(--bg-3);border:1px solid var(--border);border-radius:4px;padding:.2rem .6rem;color:var(--text-faint);text-decoration:none;transition:color .2s"
                           class="footer-link">
                            @System.Globalization.CultureInfo.CurrentCulture.TextInfo.ToTitleCase(cat)
                        </a>
                    }
                </div>
            </div>
        </div>
        <div style="border-top:1px solid var(--border);padding-top:1.25rem;display:flex;justify-content:space-between;align-items:center;flex-wrap:wrap;gap:.5rem">
            <span style="font-size:.75rem;color:var(--text-faint)">&copy; @DateTime.Now.Year NewsApp &mdash; ASP.NET Core 8 MVC</span>
            <span style="font-size:.72rem;color:var(--text-faint)">Powered by NewsAPI.org</span>
        </div>
    </div>
</footer>

<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>

